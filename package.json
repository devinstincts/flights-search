{
  "private": true,
  "name": "flights-search-app",
  "version": "1.0.0",
  "description": "Search for Flights",
  "author": "Nagendra Nagaraju",
  "scripts": {
    "install:client": "cd ./client && npm install",
    "install:server": "cd ./server && npm install",
    "install:all": "npm-run-all install:client install:server",

    "lint:client": "(cd ./client && npm run lint)",
    "lint:server": "(cd ./server && npm run lint)",
    "lint:all": "npm-run-all lint:client lint:server",

    "test:client": "(cd ./client && npm test)",
    "test:server": "(cd ./server && npm test)",
    "test:all": "npm-run-all test:client test:server",

    "build:client": "(cd ./client && npm run build)",
    "build:server": "(cd ./server && npm run build)",
    "build:all": "npm-run-all build:client build:server",

    "start:client": "(cd ./client && npm start)",
    "start:server": "(cd ./server && npm start)",
    "start:json-server": "cd ./server && npm run start:json-server",
    "start:all":  "npm-run-all start:client start:server start:json-server"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
